<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4F8F8">

    <ImageView
        android:id="@+id/imageHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/header" />

    <ImageView
        android:id="@+id/imageArrow"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/arrowBack" />

    <TextView
        android:id="@+id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageArrow"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:fontFamily = "sans-serif-black"
        android:text="Reset Password?"
        android:textColor="#519CA3"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/h2"
        android:layout_width="285dp"
        android:layout_height="58dp"
        android:layout_below="@id/h1"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:text="Please type a new password and re-enter the password. Type something you will remember! "
        android:textColor="#000000"
        android:textSize="15sp" />



    <TextView
        android:id="@+id/np"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="220dp"
        android:text="New Password"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="16dp" />

    <View
        android:layout_marginTop="250dp"
        android:layout_marginLeft="32dp"
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:background="@drawable/form_rectangle" />

    <TextView
        android:id="@+id/wnp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="260dp"
        android:text="Enter New Password"
        android:textColor="#908B8B"
        android:fontFamily="sans-serif"
        android:textSize="15dp" />
























    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/np"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="60dp"
        android:text="Confirm Password"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="16dp" />

    <View
        android:layout_marginTop="85dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@+id/np"
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:background="@drawable/form_rectangle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wnp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="55dp"
        android:text="Re-enter Password"
        android:textColor="#908B8B"
        android:fontFamily="sans-serif"
        android:textSize="15dp" />











    <View
        android:id="@+id/send"
        android:layout_width="190dp"
        android:layout_height="35dp"
        android:layout_below="@+id/np"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="165dp"
        android:background="@drawable/add_rectangle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/np"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="170dp"
        android:fontFamily="sans-serif"
        android:text="Send"
        android:textColor="#FFFFFF"
        android:textSize="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:text="Donâ€™t want to reset password?"
        android:textColor="#000000"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="5dp"
        android:text="Login"
        android:textColor="#157177"
        android:fontFamily="sans-serif"
        android:textSize="15dp" />


</RelativeLayout>
