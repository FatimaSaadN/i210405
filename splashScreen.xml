<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4F8F8">
    <RelativeLayout
        android:id="@+id/android_sta"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-1dp"
            android:layout_marginRight="-4dp"
            android:src="@drawable/wifiStuff" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="193dp"
        android:layout_height="183dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bubbles" />

    <ImageView
        android:id="@+id/imageMentorMe"
        android:layout_width="318dp"
        android:layout_height="83dp"
        android:layout_centerInParent="true"
        android:src="@drawable/mentorMe" />



    <TextView
        android:id="@+id/connectAskLearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageMentorMe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="connect. ask. learn."
        android:textColor="#519CA3"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>
