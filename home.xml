<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4F8F8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="190dp"
            android:layout_height="163dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bubbles" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="127dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-4dp"
            android:src="@drawable/wifiStuff" />

        <!-- Textview for "Hello" -->
        <TextView
            android:id="@+id/helloTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="80dp"
            android:fontFamily="sans-serif-black"
            android:text="Hello, "
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- Textview for "Ali" -->
        <TextView
            android:id="@+id/aliTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="80dp"
            android:text="Ali"
            android:textColor="#157177"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aliTextView"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:text="Ready for mentorship? Letâ€™s begin the journey!"
            android:textColor="#000000"
            android:textSize="16sp" />

        <View
            android:id="@+id/all"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_below="@+id/h2"
            android:layout_alignLeft="@+id/h2"
            android:layout_marginTop="25dp"
            android:background="@drawable/add_rectangle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/h2"
            android:layout_alignLeft="@+id/h2"
            android:layout_centerVertical="true"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="sans-serif"
            android:text="All"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />



        <View
            android:id="@+id/all"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_below="@+id/h2"
            android:layout_alignLeft="@+id/h2"
            android:layout_marginTop="25dp"
            android:background="@drawable/add_rectangle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/h2"
            android:layout_alignLeft="@+id/h2"
            android:layout_centerVertical="true"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="sans-serif"
            android:text="All"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <HorizontalScrollView
            android:layout_below="@id/h2"
            android:layout_marginTop="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="180dp"
                    android:src="@drawable/mentor1" />

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="180dp"
                    android:src="@drawable/mentor2" />

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="180dp"
                    android:src="@drawable/mentor3" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
</LinearLayout>
