<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4F8F8">


    <RelativeLayout
        android:id="@+id/android_sta"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-4dp"
            android:src="@drawable/wifiStuff" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="169dp"
        android:layout_height="159dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bubbles" />

    <ImageView
        android:id="@+id/imageMentorMe"
        android:layout_width="318dp"
        android:layout_height="83dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="125dp"
        android:src="@drawable/mentorMe" />

    <View
        android:layout_width="match_parent"
        android:layout_height="615dp"
        android:layout_marginTop="230dp"
        android:layout_weight="3"
        android:background="@drawable/custom_rectangle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="260dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="330dp"
        android:fontFamily="sans-serif"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <View
        android:layout_marginTop="370dp"
        android:layout_marginLeft="32dp"
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:background="@drawable/form_rectangle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="380dp"
        android:text="Enter Email"
        android:textColor="#908B8B"
        android:fontFamily="sans-serif"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="430dp"
        android:text="Password"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:textSize="20dp" />

    <View
        android:layout_marginTop="470dp"
        android:layout_marginLeft="32dp"
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:background="@drawable/form_rectangle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="480dp"
        android:text="Enter Your Password"
        android:textColor="#908B8B"
        android:fontFamily="sans-serif"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="520dp"
        android:text="Forgot Your Password?"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:textSize="12dp" />

    <View
        android:layout_marginTop="560dp"
        android:layout_marginLeft="100dp"
        android:layout_width="185dp"
        android:layout_height="45dp"
        android:background="@drawable/button_code" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="570dp"
        android:text="Login"
        android:textStyle="bold"
        android:textColor="#50C2C9"
        android:fontFamily="sans-serif-black"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="800dp"
        android:text="Don't Have an Account?"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="800dp"
        android:text="Sign Up"
        android:textColor="#157177"
        android:fontFamily="sans-serif"
        android:textSize="15dp" />


</RelativeLayout>
